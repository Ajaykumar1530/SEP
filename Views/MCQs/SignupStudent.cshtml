@{
}
@model Student

    <form mode="post" asp-action="SignupStudent" asp-controller="MCQs">

        <h2 style="text-align:center;color:#990033">Candidate Registration</h2>
        <table align="center">
            <tr>
            <br />
            </tr>
            <tr><td>
   Enter Your Name:</td><td><input type="text" asp-for="StudentName" /></td>
   </tr>
 <tr> <td> Enter Your Email:</td><td><input type="email" asp-for="StudentEmail" /></td></tr>
 <tr> <td> Enter Qualification:</td><td><select asp-for="Qualification" required>
    <option value="">-Select-</option>
    <option value="Btech">Btech</option>
    <option value="Degree">Degree</option>
    <option value="Others">Others</option>
</select></td></tr>
 <tr> <td> Enter YearOfPassOut:</td><td><input type="number" asp-for="YOP" /></td></tr>
 <tr> <td> Select Your Technology</td><td> <select asp-for="Technology" required>
              <option value="">-Select-</option>
              <option value="DOTNET">DOTNET</option>
              <option value="JAVA">JAVA</option>
              <option value="SALESFORCE">SALESFORCE</option>
              <option value="DEVOPS">DEVOPS</option>
          </select></td></tr>
 <tr> <td> Test Date:</td><td><input type="date" asp-for="DateOfTest" /></td></tr>
 <tr> <td> Enter PhoneNo:</td><td><input type="text"  pattern="[0-9]{10}" asp-for="MobileNo" /></td></tr>
   <tr><td>Enter Password:</td><td><input type="password"asp-for="Password" /></td></tr>
  <tr><td> Confirm Password:</td><td><input type="password" asp-for="ConfirmPassword" /></td></tr>
<tr><td><button class="btn btn-primary" type="submit">SignUp</button></td></tr>
<tr>
    <td></td>
    <td><a style="color:brown" asp-action="StudentLogin" asp-controller="MCQs">Login?</a></td>
</tr>
</table>
    @if(TempData["ComparePwd"] != null)
    {
       <h5 style="color:red">@TempData["ComparePwd"]</h5> 
    }

    </form>
    @if (TempData["SuccessMessage"] != null)
{
    <script>
    document.getElementById("StudentName").value="";
document.getElementById("StudentEmail").value = "";
document.getElementById("Qualification").value = "";
document.getElementById("YOP").value = "";
document.getElementById("Technology").value = "";
document.getElementById("MobileNo").value = "";
document.getElementById("DateOfTest").value = "";
document.getElementById("MobileNo").value = "";
document.getElementById("Password").value = "";
document.getElementById("ConfirmPassword").value = "";


    </script>
    
      <h5 class="alert alert-success">  @TempData["SuccessMessage"]</h5>
   
}
