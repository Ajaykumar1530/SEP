@model CandidatesList

    <form enctype="multipart/form-data" mode="post" asp-action="AddCandidate" asp-controller="CandidatesList">

        <h2 style="text-align:center;color:#990033">Add Candidate</h2>
        <table align="center">
            <tr>
            <br />
            </tr>
            <tr><td>
   Enter CandidateName:</td><td><input type="text" asp-for="CandidateName" /></td>
   </tr>
 <tr> <td>Address:</td><td><input type="text" asp-for="Address" /></td></tr>
@* <tr> <td>EducationQualification:</td><td><input type="text" asp-for="HighestEducationQualification" /></td></tr>
*@
<tr><td>Select Qualification</td>
    <td><select asp-for="HighestEducationQualification" required>
    <option value="">-Select-</option>
    <option value="Btech">Btech</option>
    <option value="Degree">Degree</option>
    <option value="Others">Others</option>
</select>
</td></tr>
<tr><td>Branch:</td><td><input type="text"asp-for="GraduationSpecialization" /></td></tr>
  <tr><td> YearOfPassOut:</td><td><input type="text" asp-for="YearOfGraduation" /></td></tr>
      <tr><td> Technology:</td>
      <td>
          <select asp-for="PreferredTechnology" required>
              <option value="">-Select-</option>
              <option value="DOTNET">DOTNET</option>
              <option value="JAVA">JAVA</option>
              <option value="SALESFORCE">SALESFORCE</option>
              <option value="DEVOPS">DEVOPS</option>

          </select>
      </td>    
      </tr>
        <tr><td> Mobile:</td><td><input type="text" pattern="[0-9]{10}" asp-for="Mobile" /></td></tr>
          <tr><td> E-Mail:</td><td><input type="email" asp-for="Email" /></td></tr>
                <tr><td>Upload Resume:</td><td><input type="file" class="form-control-file" id="resume" name="Resume"> </td></tr>
                  <tr><td>Upload Image:</td><td>   <input asp-for="Image" type="file" class="form-control-file" /></td></tr>

<tr><td><button class="btn btn-primary" type="submit">Add</button></td></tr>
</table>
    <h5 style="text-align:center";class="alert alert-success">  @TempData["message"]</h5>
    </form>
    @if (TempData["message"] != null)
{
    <script>
    document.getElementById("CandidateName").value="";
document.getElementById("Address").value = "";
document.getElementById("HighestEducationQualification").value = "";
document.getElementById("GraduationSpecialization").value = "";
document.getElementById("YearOfGraduation").value = "";
document.getElementById("PreferredTechnology").value = "";
document.getElementById("Mobile").value = "";
document.getElementById("Email").value = "";


    </script>
    
      
   
}
